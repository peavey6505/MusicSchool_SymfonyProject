{% block stylesheets %}
    <link href="{{ asset('css/usunUcznia.css') }}" rel="stylesheet" />
{% endblock %}

<div class="w3-bar" >

    <div class = "inner">
        Wprowadź id ucznia do usunięcia
        <form action={{path('usunUcznia')  }} method="post">
            <input type="hidden" name="id" value={{ id }} />

            <input type="text" name="idDoUsuniecia" />


            <button type="submit">Usuń</button >


        </form>



    </div>

    <div class = "inner">

        Szukaj po nazwisku:

        <form action={{ path('usunUcznia') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <input type="text" name="filtrNazwisko" />
            <button type="submit">Szukaj</button >
        </form>

    </div>

    <div class = "inner">



        <form action={{ path('usunUcznia') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <input type="hidden" name="wyczyscFiltr" value = "1" /><br/>
            <button type="submit">Wyczyść wyszukiwanie</button >
        </form>

    </div>

</div>





