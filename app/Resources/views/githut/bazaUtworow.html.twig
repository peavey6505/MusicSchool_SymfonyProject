{% block stylesheets %}
    <link href="{{ asset('css/bazaUtworow.css') }}" rel="stylesheet" />
{% endblock %}


<div class="w3-bar" >

    <div class = "inner">

        <form action={{ path('bazaUtworow') }} method="post">
            <h2>Dodaj Utwór</h2>
            <input type="hidden" name="id" value={{ id }} />
            <label>Wykonawca</label>
            <input type="text" name="wykonawca" />
            <label>Tytuł</label>
            <input type="text" name="tytul"/>
            <textarea name="akordy">Akordy</textarea>

            <button type="submit">Dodaj Utwór</button >
        </form>


    </div>



    <div class = "inner22">



        <form class="form2" action={{ path('bazaUtworow') }} method="post">
            <h2>Szukaj po wykonawcy</h2>
            <input type="hidden" name="id" value={{ id }} />
            <label>Wykonawca</label>
            <input type="text" name="filtr" />
            <button type="submit">Filtruj</button >
        </form>
        <form action={{ path('bazaUtworow') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <button type="submit">Wyczyść</button >
        </form>
    </div>


    <div class = "inner22">



        <form class="form2" action={{ path('bazaUtworow') }} method="post">
            <h2>Szukaj po tytule</h2>
            <input type="hidden" name="id" value={{ id }} />
            <label>Tytuł</label>
            <input type="text" name="filtrPiosenka" />
            <button type="submit">Filtruj</button >
        </form>

        <form action={{ path('bazaUtworow') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <button type="submit">Wyczyść</button >
        </form>

    </div>


</div>














<h3>Baza utworów:</h3>

<table border="1" cellpadding="10" cellpadding="0" >
    <tr>
        <td> ID </td> <td> Tytuł </td> <td> Wykonawca </td> <td>Akordy</td>
    </tr>

    {% for p in piosenki %}

        <tr>
            <td> {{ p.id }} </td> <td> {{ p.tytul }} </td> <td> {{ p.wykonawca }}</td>  <td>  {{ p.akordy }}</td>   </tr>
    {% endfor %}
</table>


<form class="powrotButton" action={{ path('profilNauczyciela') }} method="post">
    <input type="hidden" name="id" value={{ id }} />

    <button type="submit">Powrót</button >
</form>
