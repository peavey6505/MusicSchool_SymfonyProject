{% block stylesheets %}
    <link href="{{ asset('css/profilAdmina.css') }}" rel="stylesheet" />
{% endblock %}




{% block body %}
<div class="w3-container w3-teal">
    <h1>SZKOŁA MUZYCZNA - PROFIL ADMINISTRATORA</h1>
</div>



<div class="w3-bar" >

    <div class = "inner">

        <form action="{{ path('login') }}" >
            <button type="submit">Wyloguj</button>
        </form>
    </div>

    <div class = "inner">

        <form action={{ path('dodajUcznia') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <button type="submit">Dodaj Ucznia</button >
        </form>
    </div>

    <div class = "inner">

        <form action={{ path('dodajNauczyciela') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <button type="submit">Dodaj Nauczyciela</button >
        </form>
    </div>

    <div class = "inner">
        <form action={{ path('usunUcznia') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <button type="submit">Usuń ucznia</button >
        </form>
    </div>

    <div class = "inner">
        <form action={{ path('usunNauczyciela') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <button type="submit">Usun nauczyciela</button >
        </form>
    </div>

    <div class = "inner">
        <form action={{ path('zarzadzajForum') }} method="post">
            <input type="hidden" name="id" value={{ id }} />
            <button type="submit">Zarządzaj forum</button >
        </form>
    </div>






{% endblock %}

